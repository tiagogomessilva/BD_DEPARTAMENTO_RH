1- REGRAS DE NEGOCIO DEPARTAMENTO DE RH

OBJETIVO

	  
	 CARDINALIDADE E OBRIGATORIEDADE DA TABELA É
	 
	 1 - FUNCIONARIOS ( CODIGO , PRIMEIRO_NOME, SEGUNDO_NOME , ULTIMO_NOME , SEXO, DATA_NASC , CPF , RG ) ( OBRIGATORIO
	 2 - ENDERECO - CAMPO MULTIVALORADO ( ENDERECO , RUA , BAIRRO , CIDADE , ESTADO , PAIS)
	 3- CARGO - ( FUNCAO , SALARIO , GESTOR)
	 4- DEPARTAMENTO -( DEPARTAMENTO , LOCALIZACA0)
	 5- TELEFONE ( TIPO , NUMERO)
	 

	 
	 IMPORTANTE FRISAR
	 UM COLABORADOR SO PODE TER UM ENDERECO , UM CARGO , TRABALHAR EM UM DEPARTAMENTO , NAO É OBRIGADO A CADASTRAR 
	 UM TELEFONE MAS CASO QUEIRA PODE CADASTRAR MAIS DE UM TELEFONE
	 
	 ASSIM COMO 
	 UM FUNCIONARIO POSSUI UM ENDERECO
	 QUE POSSUI UM CARGO
	 QUE POSSUI UM TELEFONE OU MAIS TELEFONE 

CREATE TABLE FUNCIONARIO(
    IDFUNCIONARIO INT PRIMARY KEY AUTO_INCREMENT, -- CAMPO OBRIGATORIO PARA IDENTIFICACAO DA FICHA COLABORADOR
    PRIMEIRO_NOME VARCHAR(20) -- CAMPO OBRIGATORIO
    SEGUNDO_NOME VARCHAR(20) -- CAMPO OBRIGATORIO
    ULTIMO_NOME VARCHAR(20) -- CAMPO OBRIGATORIO
    SEXO ENUM('M','F') -- CAMPO OBRIGATORIO DEIXAR COMO OPÇÃO SE É MASCULINO OU FEMININO NAO DEIXANDO USUARIO PREENCHER 
    DATA_NASC VARCHAR(11) -- -- CAMPO OBRIGATORIO
    EMAIL VARCHAR(50) UNIQUE, - -- CAMPO OBRIGATORIO E UNICO PARA CADA COLABORADOR SO A UM EMAIL UNICO
    CPF VARCHAR(15) UNIQUE , -- CAMPO OBRIGATORIO PARA CRIACAO DE APENAS UM CPF
    RG INT(14) UNIQUE -- CAMPO OBRIGATORIO PARA APENAS UM RG
    );

	CREATE TABLE ENDERECO(
    IDENDERECO INT PRIMARY KEY AUTO_INCREMENT, -- CAMPO OBRIGATORIO
    RUA VARCHAR(30) -- CAMPO OBRIGATORIO
    BAIRRO VARCHAR(30) -- CAMPO OBRIGATORIO
	CEP VARCHAR(11) -- CAMPO OBRIGATORIO
	ENDERECO VARCHAR(100) -- CAMPO OBRIGATORIO
    CIDADE VARCHAR(30) -- CAMPO OBRIGATORIO
    ESTADO CHAR(2) -- CAMPO OBRIGATORIO
    ID_FUNCIONARIO -- CAMPO OBRIGATORIO
    FOREIGN KEY(ID_FUNCIONARIO) -- CAMPO OBRIGATORIO É AONDE SERA A REFERENCIA DA PRIMEIRA TABELA AONDE FUTURAMENTE PODERA SER INSERIDO NOVAS INFORMACOES 
    REFERENCES FUNCIONARIO(IDFUNCIONARIO) 
    );
	

	
	CREATE TABLE TELEFONE(
    IDTELEFONE INT PRIMARY KEY AUTO_INCREMENT,
    TIPO ENUM('COM','RES','CEL'),-- CAMPO NAO OBRIGATORIO
    NUMERO VARCHAR(15), -- CAMPO OBRIGATORIO 
    ID_FUNCIONARIO INT, -- CAMPO OBRIGATORIO
    FOREIGN KEY(ID_FUNCIONARIO) 
    REFERENCES FUNCIONARIO(IDFUNCIONARIO)
    );
	
 CREATE TABLE DEPARTAMENTO(
       IDDEPARTAMENTO INT PRIMARY KEY AUTO_INCREMENT,
       DEPARTAMENTO VARCHAR(30) -- CAMPO OBRIGATORIO
       LOCALIZACAO VARCHAR(30) -- CAMPO OBRIGATORIO
       ID_FUNCIONARIO INT UNIQUE, -- CAMPO OBRIGATORIO
       FOREIGN KEY(ID_FUNCIONARIO)
       REFERENCES FUNCIONARIO(IDFUNCIONARIO)
       );
	
	
	CREATE TABLE CARGO(
    IDCARGO INT PRIMARY KEY AUTO_INCREMENT -- CAMPO OBRIGATORIO
    FUNCAO VARCHAR(50) -- CAMPO OBRIGATORIO
    SALARIO FLOAT(12) -- CAMPO OBRIGATORIO
    GESTOR VARCHAR(30) -- CAMPO OBRIGATORIO
    ID_FUNCIONARIO INT UNIQUE,
    FOREIGN KEY(ID_FUNCIONARIO)
    REFERENCES FUNCIONARIO(IDFUNCIONARIO)
    );
	
	
	